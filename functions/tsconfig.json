{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",

    /* Custom */
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
